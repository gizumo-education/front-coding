{
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
  ],
  "rules": {
    "no-console": 1,
    "no-control-regex": "off",
    "max-len": ["error", {
      "code": 90,
      "ignoreComments": true,
      "ignoreTrailingComments": true,
      "ignoreUrls": true
    }],
    "no-irregular-whitespace": [
      "error",
      {
        "skipTemplates": true,
        "skipStrings": true
      }
    ],
    "import/no-named-as-default": "off",
    "no-trailing-spaces": "error"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}